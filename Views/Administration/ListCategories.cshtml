@using TechStoreMVC.Models.Category
@model List<CategoryCreateModel>
@{
	ViewBag.Title = "List of Categories";
}

<h1 class="text-center">List of Categories</h1>

@if (TempData["Message"] != null)
{
	<div class="alert alert-@TempData["MessageType"]" role="alert">
		@TempData["Message"]
	</div>
}

<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create Category</a>
<table class="table text-center">
	<thead>
		<tr>
			<th scope="col">Category ID</th>
			<th scope="col">Category Name</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (CategoryCreateModel c in Model)
		{
			<tr class="align-middle">
				<td>@c.Id</td>
				<td>@c.Name</td>
				<td>
					<a asp-action="Edit" asp-controller="Category" asp-route-id="@c.Id" class="btn btn-primary">Edit</a>
					<a asp-action="Delete" asp-controller="Category" asp-route-id="@c.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
