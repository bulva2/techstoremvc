@using TechStoreMVC.Entities
@using TechStoreMVC.Models.Order
@model OrderViewModel

@{
	ViewBag.Title = "Order Details";
}

<h1 class="text-center display-2">Order Details</h1>

@if (TempData["Message"] != null)
{
	<div class="alert alert-@TempData["MessageType"]" role="alert">
		@TempData["Message"]
	</div>
}

<div class="container">
	<div class="row">
		<div class="col-6">
			<h6 class="display-6">Order Infomation</h6>
			<h4>Order ID: @Model.Id</h4>
			<h4>Total Price: @Model.TotalPriceText</h4>
			<h4>Delivery Address: @Model.Address</h4>
			<h4>Order Status: @Model.Status</h4>
		</div>
		<div class="col-6">
			<h2 class="display-6">Products</h2>
			<table class="table text-center">
				<thead>
					<tr>
						<th scope="col">Brand</th>
						<th scope="col">Model</th>
						<th scope="col">Price</th>
						<th scope="col">Quantity</th>
					</tr>
				</thead>
				<tbody>
					@foreach (OrderItem item in Model.OrderItems)
					{
						<tr>
							<td>@item.Product.Brand</td>
							<td>@item.Product.Model</td>
							<td>@item.Product.PriceText</td>
							<td>@item.Quantity</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
